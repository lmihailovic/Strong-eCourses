<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Strong_eCourses</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Strong_eCourses.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <ul>
            <li class="liLogo"><a href=""><img src="~/images/logo3.png" alt="Logo" /></a></li>
            <div class="navigation d-flex">
                <li><a href="">Početna</a></li>
                <li><a href="">Logout</a></li>
            </div>

        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="foot">
    <div class="footCol"><a href=""><img src="~/images/logo3.png" alt="Logo" /></a></div>
    <div class="footCol">
        <h3>Korisne stranice</h3>
        <a href="">Početna</a>
        <a href="">RAF</a>
        <a href="">Github</a>
    </div>
    <div class="footCol">
        <h3>Autori</h3>
        <p>Hristina Boharev</p>
        <p>Marko Teofanović</p>
        <p>Luka Mihailović</p>
        <p>Luka Obradović</p>
    </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
